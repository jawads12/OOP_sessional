#include <iostream>
using namespace std;

class A{
    int d;
public:
    void setD()
    {
        if(x==0) cout<<"Invalid Input";
        else 
        d = x;
    }
    int getD(){
    return d;
    }
    
    
public :
    int i ;
    double d;
private :
    int x;
    
    
    
    
    
    

};



int main ()
{
    A ob;
    ob.i = 5;
    
    
   // cout<<ob.i;
    setD(5);
    
    cout<<getD();
    
    return 0;
}


