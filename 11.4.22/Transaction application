    return prevBalance;
    }
    int getAmount()
    {
        return amount;
    }
    void setSender(string x)
    {
        sender = x;
    }


    void setReceiver(string x)
    {
        receiver = x;
    }
    void setPrevBalance(int x)
    {
        prevBalance = x;
    }
    void setAmount(int x)
    {
        amount = x;
    }



};

